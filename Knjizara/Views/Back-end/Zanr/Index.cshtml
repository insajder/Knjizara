@model IEnumerable<Knjizara.Models.Zanr>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Back-end/layout/back_end_layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Css/BtnCreate.css">

<h2>Zanrovi</h2>

<input type="text" id="myInput" placeholder="Pretrazi" class="form-control" />

@Html.ActionLink("Kreiraj novi", "Create", null, new { @class = "btn btn-success pull-right", id = "btnCreate2" })

<table id="datatable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Vrste:

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="myTable">
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-lg-6">
                    @Html.DisplayFor(modelItem => item.vrsta)
                </td>
                <td>
                    @Html.ActionLink("Izmeni", "Edit", new { id = item.id_zanr }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Obrisi", "Delete", new { id = item.id_zanr }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>

    </table>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/SearchField.js"></script>


